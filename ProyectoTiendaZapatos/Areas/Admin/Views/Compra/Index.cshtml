@model IEnumerable<ProyectoTiendaZapatos.Models.Compra>
@{
    ViewData["Title"] = "Lista de Compras";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Compras</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Crear Nueva Compra
            </a>
        </div>
    </div>
    <br />
    <table id="tblCompras" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>CompraId</th>
                <th>ClienteId</th>
                <th>Fecha</th>
                <th>Total</th>
            </tr>
        </thead>
        
    </table>
</div>

@section Scripts {
    <script src="~/js/Compras.js"></script>
}
